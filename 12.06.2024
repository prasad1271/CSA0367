//Display the given array of 5th iteration element
#include<stdio.h>
#define size 5
int main()
{
    int array[size];
    printf("Enter the Array Elements :\n");
    for (int i=0;i<size;i++)
    {
        scanf("%d",&array[i]);
    }
    printf("Array Elements :");
